{
  "name": "omni-video-downloader",
  "version": "1.1.0",
  "description": "Max-specific applications for downloading content from various video platforms",
  "main": "./out/main/index.js",
  "author": "thoven-jun",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "tree": "node update-folder-tree.js"
  },
  "build": {
    "appId": "com.thoven-jun.omni-video-downloader",
    "productName": "Omni Video Downloader",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.png",
      "extraFiles": [
        "build/Click Me to Fix.command"
      ]
    },
    "dmg": {
      "title": "Omni Video Downloader Installer",
      "background": "build/installer-bg.png",
      "icon": "resources/icon.png",
      "iconSize": 120, 
      "contents": [
        {
          "x": 200,
          "y": 200,
          "type": "file"
        },
        {
          "x": 600,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 400,
          "y": 380,
          "type": "file",
          "path": "build/Click Me to Fix.command"
        }
      ],
      "window": {
        "width": 800,
        "height": 500
      }
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.554.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.22",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  }
}